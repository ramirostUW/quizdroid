<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fourth_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/providedAnswerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provided Answer:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/providedAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The FitnessGramâ„¢ Pacer Test is a multistage aerobic capacity test that progressively gets more difficult as it continues."
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/correctAnswerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct Answer:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/correctAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The 20 meter pacer test will begin in 30 seconds. Line up at the start."
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/currentGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have -1 out of 9 correct"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/buffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textSize="20dp" />

        <Button
            android:id="@+id/nextQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>